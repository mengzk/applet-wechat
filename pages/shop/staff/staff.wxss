.staff {
  position: relative;
}

.staff-list {
  display: grid;
  margin: 24rpx 24rpx;
  grid-gap: 24rpx;
  grid-template-columns: repeat(2, 1fr);
  grid-template-rows: 10;
}
.staff-item {
  align-items: center;
  padding: 24rpx 0 24rpx 24rpx;
  border-radius: 12rpx;
  background-color: white;
  box-shadow: 0 2px 8px 0 rgba(0, 0, 0, 0.07);
}

.staff-icon {
  width: 76rpx;
  height: 76rpx;
  margin-right: 24rpx;
  border-radius: 50%;
  background-color: aqua;
}

.staff-name {
  color: #232323;
  font-size: 36rpx;
  font-weight: 500;
  line-height: 56rpx;
}

.staff-phone {
  color: #676767;
  font-size: 30rpx;
  line-height: 48rpx;
}