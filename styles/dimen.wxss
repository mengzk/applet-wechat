/* 字体 */
.ffya {
  font-family: PingFangSC-Regular;
}

.ffyb {
  font-family: PingFangSC-Medium;
}

/* 字重 */
.fwt2 {
  font-weight: 200;
}
.fwt3 {
  font-weight: 300;
}
.fwt4 {
  font-weight: 400;
}
.fwt5 {
  font-weight: 500;
}
.fwt6 {
  font-weight: 600;
}
.fwt7 {
  font-weight: 700;
}

/* 字大小 */
.ft10 {
  font-size: 20rpx;
}
.ft12 {
  font-size: 24rpx;
}
.ft14 {
  font-size: 28rpx;
}
.ft16 {
  font-size: 32rpx;
}
.ft18 {
  font-size: 36rpx;
}
.ft20 {
  font-size: 40rpx;
}
.ft22 {
  font-size: 44rpx;
}
.ft24 {
  font-size: 48rpx;
}
.ft26 {
  font-size: 52rpx;
}
.ft28 {
  font-size: 56rpx;
}
.ft30 {
  font-size: 60rpx;
}
.ft32 {
  font-size: 64rpx;
}
.ft34 {
  font-size: 68rpx;
}

/* 省略 */
.ellips {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.ellips2 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  white-space: normal !important;
}

/* 文本对齐 */
.ta-l {
  text-align: left;
}
.ta-c {
  text-align: center;
}

.ta-r {
  text-align: right;
}

/* 文本行高 */
.lh1 {
  line-height: 1;
}

.lh2 {
  line-height: 2;
}

.lh3 {
  line-height: 3;
}

/* 文本间距 */
.ls1 {
  letter-spacing: 1px;
}

.ls2 {
  letter-spacing: 2px;
}

.ls3 {
  letter-spacing: 3px;
}

/* 文本装饰 */
.td-u {
  text-decoration: underline;
}

.td-n {
  text-decoration: none;
}

/* 文本换行 */
.tn {
  white-space: normal;
}

/* 文本转换 */
.tt-u {
  text-transform: uppercase;
}

.tt-l {
  text-transform: lowercase;
}

.tt-c {
  text-transform: capitalize;
}

/* 文本阴影 */

.ts1 {
  text-shadow: 1px 1px 1px #000;
}

.ts2 {
  text-shadow: 2px 2px 2px #000;
}

.ts3 {
  text-shadow: 3px 3px 3px #000;
}

/* 文本颜色渐变 */

.tg1 {
  font-size: 28px;
  font-weight: 500;
  background: linear-gradient(299deg, #ffd8b9 5%, #dd9804 83%);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}
