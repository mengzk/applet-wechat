/* pages/my/mhome/mhome.wxss */
.m-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  /* background-color: white; */
}
.top-bg {
  top: 0;
  width: 100%;
  height: 560rpx;
  position: absolute;
  display: flex;
  flex-direction: column;
  background-color: white;
  border-bottom: solid #eee 1px;
}
.top-bg-img {
  width: 100%;
  height: 400rpx;
  position: absolute;
}
.top-layout {
  color: #232323;
  z-index: 1;
  margin-top: 326rpx;
  padding-left: 32rpx;
  padding-right: 32rpx;
  display: flex;
  align-items: center;
}
.user-box {
  width: 100%;
  display: flex;
  flex-direction: column;
  /* margin-top: 146rpx; */
}
.user-icon {
  width: 128rpx;
  height: 128rpx;
  border-radius: 62rpx;
  margin-bottom: 4rpx;
  box-shadow: 8rpx 5rpx 8rpx #12121230;
}
.user-text {
  font-size: 34rpx;
  font-weight: bold;
}
.user-name {
  font-size: 36rpx;
  font-weight: bold;
}
.user-tab {
  font-size: 28rpx;
  font-weight: normal;
  margin-right: 48rpx;
  margin-left: 8rpx;
}
.collect-view {
  width: 200rpx;
  height: 64rpx;
  display: flex;
  margin-top: 16rpx;
  font-size: 30rpx;
  border-radius: 32rpx;
  align-items: center;
  justify-content: center;
  background-color: #f5a62f;
}
.user-data-box {
  margin-top: 16rpx;
}
.tab-layout {
  margin-top: 560rpx;
  display: flex;
  justify-content: center;
  background-color: white;
}
.tab-view {
  width: 128rpx;
  height: 64rpx;
  margin: 16rpx 48rpx;
  display: flex;
  position: relative;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  /* border-bottom: solid #232323 2px; */
}
.tab-text {
  color: #232323;
  font-size: 33rpx;
  font-weight: bold;
}
.tab-text2 {
  color: #767676;
  font-size: 31rpx;
}
.tab-line {
  width: 64rpx;
  height: 4rpx;
  bottom: 0;
  position: absolute;
  background-color: #232323;
}

.gridlist {
  display: flex;
  flex-wrap: wrap;
}
.item-box {
  width: 50%;
}
.img-hover {
  /* position: relative; */
  opacity: 0.87;
  transform: scale(0.97, 0.97);
  background-color: #F3F3F3;
}
.item-layout {
  overflow: hidden;
  position: relative;
  margin: 6rpx;
  height: 476rpx;
}
.item-img {
  width: 100%; 
  height: 100%; 
  border-radius: 12rpx;
}
.item-mark {
  width: 100%;
  height: 96rpx;
  /* top: 0; */
  bottom: 0;
  position: absolute;
  /* padding: 0 24rpx; */
  display: flex;
  align-items: center;
  flex-direction: row;
  font-size: 32rpx;
  color: white;
  border-radius: 12rpx;
  background: linear-gradient(#00000010, #00000090);
}
.listview {
  display: flex;
  margin: 0 24rpx;
  flex-direction: column;
}

.big-img {
  width: 100%;
  height: 300rpx;
}
.big-box {
  background-color: white;
}
.item-content {
  height: 180rpx;
}