/* 全局样式 */
.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f3f3f3;

  color: #323232;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  /* font-family: PingFangSC-Medium; */
}

.flex {
  flex: 1;
}
.wrap {
  display: flex;
  flex-wrap: wrap;
}
.row {
  display: flex;
}
.column {
  display: flex;
  flex-direction: column;
}

.center {
  align-items: center;
  justify-content: center;
}
.ai-center {
  align-items: center;
}
.jc-center {
  justify-content: center;
}

.jc-sb {
  justify-content: space-between;
}
.jc-sa {
  justify-content: space-around;
}
.jc-se {
  justify-content: space-evenly;
}


.card {
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 12rpx 0 rgba(0, 0, 0, 0.1);
}

.input-hint {
  color: #979797;
}

.cell {
  min-height: 88rpx;
  display: flex;
  align-items: center;
}

.footer-height {
  height: 88rpx;
  padding: 16rpx 32rpx;
  padding-bottom: constant(safe-area-inset-bottom); /*兼容 IOS<11.2*/
  padding-bottom: env(safe-area-inset-bottom); /*兼容 IOS>11.2*/
}

.footer {
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100vw;
  z-index: 1;
  padding: 16rpx 0;
  background-color: white;
  padding-bottom: constant(safe-area-inset-bottom); /*兼容 IOS<11.2*/
  padding-bottom: env(safe-area-inset-bottom); /*兼容 IOS>11.2*/
}
.footer-str {
  color: white;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  line-height: 88rpx;
  height: 88rpx;
  margin: 0 32rpx;
  flex: 1;

  border-radius: 24rpx;
  background-color: #232323;
}

.float-btn {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  position: fixed;
  bottom: 98rpx;
  right: 32rpx;

  font-size: 48px;

  display: flex;
  align-items: center;
  justify-content: center;
  background-color: white;
  box-shadow: 6rpx 8rpx 12rpx 8rpx rgba(73, 4, 4, 0.1);
}

.hover {
  /* position: relative; */
  opacity: 0.9;
  transform: scale(0.99, 0.99);
  /* background-color: #f3f3f3; */
}
